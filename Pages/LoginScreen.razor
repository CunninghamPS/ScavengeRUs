    .page {
    position: relative;
    display: flex;
    flex-direction: column;
    font-family: roboto, sans-serif;
    font-weight: 500;
    font-style: normal;
}

.form-control {
    width: 120%;
}

.logInWrapper{
    max-width: 600px;
}


.inputs {
    width: 50%;
}
