@page "/logout/{secretKey}"
@page "/logout"
@inherits LogoutBase
@inject NavigationManager NavigationManager
@using ScavengeRUs.Data;

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
    <center> 
        <div>
            <div class="col-12">
                <h3 style = "color:#3998E8; font-weight: bold">Logout</h3>
            </div>
            <br /> <br /> <br /> 
        </div>
        <div class="border logInWrapper"> 
                <div>
                    <input type="submit" class="btn btn-primary" @onclick="logout" value="LOGOUT" />
                </div>
        </div>
    </center>


@code {
    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

    private void logout()
    {
        if (secretKey != null)
        {
            DBTest.logout(secretKey);
            NavigationManager.NavigateTo("/");
        }
        else
        {
            DBTest.addUsersToGame();
        }
    }
}



