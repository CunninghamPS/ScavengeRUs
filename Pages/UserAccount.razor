@page "/profile/{secretKey}"
@inherits MapPageBase
@inject NavigationManager NavigationManager
@using ScavengeRUs.Models;
@using ScavengeRUs.Data;
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<div class="container-xl">
    <!-- Account page navigation-->
    
    <div class="row">
            <!-- Profile picture card-->
            <div class="firstCard">
                    <img class="img-account-profile rounded-circle" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <span class="accountName">@Account.FirstName @Account.LastName</span>
                    <span class="displayname">@Account.UserName</span>
                    <!-- Profile picture upload button-->
                    <!-- <button class="btn btn-primary" type="button">Select new image</button> -->
           </div>
        </div>
        <div class="statsCard">
                <div class="card-body text-center">
                    <div class="stat" style="border-right: .5px solid white;">
                        <i class="fa-solid fa-trophy fa-2xl" style="font-size: 36px; color:white"></i>
                        <div class="statText">
                            <span style="font-weight:bold; font-size: 18px; color:white;">7</span>
                            <span style="font-weight:lighter; font-size: 12px; color:white;">Career Wins</span>
                        </div>
                    </div>
                    <div class="stat" style="border-left: .5px solid white;">
                        <i class="fa-solid fa-award fa-2xl" style="font-size: 36px; color:white"></i>
                        <div class="statText">
                            <span style="font-weight:bold; font-size: 18px; color:white;">28</span>
                            <span style="font-weight:lighter; font-size: 12px; color:white;">Prizes Won</span>
                        </div>
                    </div>
                </div>
        </div>
        <nav class="nav nav-borders">
            <a @onclick="@(() => navigateTo("profile"))"> <p class="nav-link active ms-0" >Profile </p> </a>
            <a @onclick="@(() => navigateTo("security"))"> <p class="nav-link ms-0"  >Security </p> </a>
        </nav>
            <!-- Account details card-->
    <center>
        <div class="border signUpWrapper"> 
            <br />
            <fieldset>
                <br />
                <span style="font-size:36px; font-weight:bold; color: white;">Account Details</span>
                <br />
                <div>
                    <br />
                    <h5 class="red" style="margin: 5px;">@invalidFirst</h5>
                    <h5 class="red" style="margin: 5px;">@invalidLast</h5>
                    <h5 class="red" style="margin: 5px;">@invalidEmail</h5>
                    <h5 class="red" style="margin: 5px;">@invalidPhone</h5>
                    <h5 class="red" style="margin: 5px;">@invalidDisplayName</h5>
                    <br />
                </div>
                <div>
                    <div class="signUpForm">
                        <div class="inputContainer">
                            <input type="text" class="input" id="FirstName" placeholder="a" style=@firstNameStyle @onclick="ClearFormat" @bind-value="Account.FirstName" />
                            <label for="FirstName" class = "label">First Name:</label>
                        </div>
                        <div class="inputContainer">
                            <input type="text" class="input" id="LastName" placeholder="a" style=@lastNameStyle @onclick="ClearFormat" @bind-value="Account.LastName" />
                            <label for ="LastName" class = "label">Last Name:</label>
                        </div>
                        <div class="inputContainer">
                            <input type="text" class="input" id="EmailAddress" placeholder="a" style=@emailStyle @onclick="ClearFormat" @bind-value="Account.Email"  />
                            <label for="EmailAddress" class = "label">Email:</label>
                        </div>
                        <div class="inputContainer">
                            <input type="text" class="input" id="PhoneNumber" placeholder="a" style=@phoneStyle @onclick="ClearFormat" @bind-value="Account.PhoneNumber"  />
                            <label for="PhoneNumber" class = "label">Phone Number:</label>
                        </div>

                        <div class="inputContainer">
                            <input type="text" class="input" id="DisplayName" placeholder="a" style=@displayNameStyle @onclick="ClearFormat" @bind-value="Account.UserName" />
                            <label for="Username" class = "label">Display Name:</label>
                        </div>
                        <br />
                    </div>
                </div>
                <button class="btn btn-primary" @onclick="HandleValidSubmit"> Save Changes</button>
                <br />
                <span style="font-size:18px; font-weight:bold; color: rgba(79,172,254,1);">@stringOnSubmit</span>
                @if(!stringOnSubmit.Equals("")){<br /><br />}
            </fieldset>
        </div>
    </center>
    <div>
        <center> 
                <div>
                    <br /> <br /> <br /> 
                </div>
                    <div>
                        <input type="submit" class="btn btn-primary" @onclick="logout" value="LOGOUT" />
                    </div>
        </center>
    </div>
    <br /><br /><br /><br /><br />
</div>

